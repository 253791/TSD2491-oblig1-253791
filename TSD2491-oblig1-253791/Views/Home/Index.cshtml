@model TSD2491_oblig1_253791.Models.HomeModel

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .container {
        width: 400px;
    }

    button {
        width: 100px;
        height: 100px;
        font-size: 50px;
    }
</style>

<div class="text-center">
    <h1 class="display-4">TSD2491 - Oblig1</h1>
</div>

<div class="container">
    <div class="row">
        @for (int i = 0; i < Model.AnimalEmoji.Count; i++)
        {
            <div class="col-3">
                @using (Html.BeginForm("CheckMatch", "Home", FormMethod.Post))
                {
                    <input type="hidden" name="buttonIndex" value="@i" />
                    <button type="submit" class="btn btn-outline-dark">
                        <h1>@Model.AnimalEmoji[i]</h1>
                    </button>
                }
            </div>
        }
    </div>
</div>