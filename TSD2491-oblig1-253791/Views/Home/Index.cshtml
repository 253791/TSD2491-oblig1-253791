@{
    ViewData["Title"] = "Home Page";
    var animalEmoji = ViewData["AnimalEmoji"] as IEnumerable<string>;
}
<style>
    .container {
        width: 400px;
    }

    button {
        width: 100px;
        height: 100px;
        font-size: 50px;
    }
</style>

<div class="text-center">
    <h1 class="display-4">TSD2491 - Oblig1</h1>
</div>

<div class="container">
    <div class="row">
        @foreach (var animal in animalEmoji)
        {
            <div class="col-3">
                <button type="button" class="btn btn-outline-dark">
                    <h1>@animal</h1>
                </button>
            </div>
        }
    </div>
</div>
